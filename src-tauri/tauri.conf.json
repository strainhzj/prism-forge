{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PrismForge",
  "version": "0.1.0",
  "identifier": "com.prismforge.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PrismForge - Claude Code Session Monitor",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "optimizer_config.toml"
    ],
    "publisher": "PrismForge Team",
    "copyright": "Copyright Â© 2025 PrismForge Team",
    "category": "Developer Tool",
    "shortDescription": "Claude Code Session Monitor & Prompt Optimizer",
    "longDescription": "PrismForge is a professional desktop application for monitoring and optimizing Claude Code sessions. Features include session scanning, vector-based retrieval, prompt optimization, and performance analysis.",
    "createUpdaterArtifacts": false
  }
}
